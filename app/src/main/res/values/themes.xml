<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        
        <!-- Metin renkleri -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        
        <!-- Özel tema nitelikleri -->
        <item name="textPrimary">@color/textPrimary</item>
        <item name="textSecondary">@color/textSecondary</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="dividerColor">@color/dividerColor</item>
        <item name="iconTintColor">@color/iconTint</item>
        
        <!-- Mesaj baloncukları için temalar -->
        <item name="messageSentBackground">@color/message_sent_bg</item>
        <item name="messageReceivedBackground">@color/message_received_bg</item>
        <item name="messageSentText">@color/message_sent_text</item>
        <item name="messageReceivedText">@color/message_received_text</item>
        
        <!-- Ayırıcı rengi -->
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/dividerColor</item>
        
        <!-- Durum çubuğu rengi -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">#AD1457</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Özel tema nitelikleri -->
        <item name="textPrimary">@color/textPrimary</item>
        <item name="textSecondary">@color/textSecondary</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="dividerColor">@color/dividerColor</item>
        <item name="iconTintColor">@color/iconTint</item>
        
        <!-- Mesaj baloncukları için temalar -->
        <item name="messageSentBackground">@color/message_sent_bg</item>
        <item name="messageReceivedBackground">@color/message_received_bg</item>
        <item name="messageSentText">@color/message_sent_text</item>
        <item name="messageReceivedText">@color/message_received_text</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>